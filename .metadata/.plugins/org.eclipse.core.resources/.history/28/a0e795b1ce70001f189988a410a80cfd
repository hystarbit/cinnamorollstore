<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderReturnDAO">
	<insert id="insertOrderReturn" parameterType="OrderReturn">
		insert into
		order_cancel(application_number)
		values(#{application_number})
	</insert>
	<update id="updateOrderReturnStatus">
		update order_cancel
		set order_cancel_status = #{order_cancel_status}
		where application_number = #{application_number}
	</update>
	<delete id="deleteOrderReturn">
		delete order_cancel
		where application_number = #{application_number}
	</delete>

	<select id="getOrderReturn" resultType="OrderReturn">
		select order_cancel.application_number as application_number, 
		order_type, order_date, order_cancel_date, order_price,
		payment_status, order_status, order_cancel.user_id, 
		userinfo.name as user_name, phone, payment_type, order_address
		from order_cancel
		inner join userinfo
		on order_cancel.user_id=userinfo.user_id
		inner join order_cancel
		on order_cancel.application_number=order_cancel.application_number
		where application_number = #{application_number}
	</select>
	
	<select id="getMyOrderReturnList" resultType="OrderReturn">
		select *
		from order_cancel
		where user_id = #{user_id}
		order by application_number desc
	</select>
	
	<select id="getOrderReturnStatusList" resultType="OrderReturn">
		select orderinfo.application_number as application_number, 
		order_type, order_date, order_cancel_date, order_price,
		payment_status, order_status, orderinfo.user_id, 
		userinfo.name as user_name, payment_type, order_address
		from orderinfo
		inner join userinfo
		on orderinfo.user_id=userinfo.user_id
        inner join order_cancel
        on orderinfo.application_number = order_cancel.application_number
        where order_cancel_status = #{order_cancel_status}
		order by application_number desc
	</select>

	<select id="getTodayOrderReturnCount" resultType="int">
		select count(*) as
		today_order_cancel_count
		from order_cancel
		where trunc(order_cancel_date) = trunc(sysdate)
	</select>
</mapper>