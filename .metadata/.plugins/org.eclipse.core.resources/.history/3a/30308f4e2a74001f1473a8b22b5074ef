<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserDAO">
	<insert id="insertUser" parameterType="User">
		insert into
		userinfo(user_id, name, password, 
		email, phone, address)
		values(#{user_id}, #{name}, #{password}, 
		#{email}, #{phone}, #{address})
	</insert>

	<update id="updateUser">
		update userinfo
		set name = #{name},address = #{address}, 
		phone = #{phone},email = #{email}
		where user_id = #{user_id}
	</update>
	
	<update id="updateUserPassword">
		update userinfo
		set password = #{password}
		where user_id = #{user_id}
	</update>
	
	<update id="updateUserByAdmin">
		update userinfo
		set address = #{address}, phone = #{phone},
		email = #{email}, grade = #{grade}
		where user_id = #{user_id}
	</update>

	<delete id="deleteUser">
		delete userinfo
		where user_id = #{user_id}
	</delete>
	
	
	<select id="getUser" resultType="User">
		select *
		from userinfo
		where user_id = #{user_id} and password = #{password}
	</select>
	
	<select id="getUserDetail" resultType="User">
		select *
		from userinfo
		where user_id = #{user_id}
	</select>
	
	<select id="getUserAdminLogin" resultType="User">
		select *
		from userinfo
		where user_id = #{user_id} and password = #{password}
		and grade = '관리자'
	</select>
	
	<select id="getUserAdmin" resultType="User">
		select *
		from userinfo
		where user_id = #{user_id} and grade = '관리자'
	</select>
	<select id="getUserList" resultType="User">
		select *
		from userinfo
		order by regdate desc
	</select>
	
	<select id="getUserListPage" resultType="User">
		select *
		from(
    		select rownum rNum,Tb.*
    		from(
				select *
				from userinfo
				order by regdate desc
		    )Tb
		)
		where rNum Between #{start} and #{end}
	</select>
	
	<select id="getUserSearchListPage" resultType="User">
		select *
		from(
    	select rownum rNum,Tb.*
    	from(
		select *
		from userinfo
		<if test="searchField != null and searchField == 'name'">
		where #{searchField} like  LIKE '%' || #{searchWord} || '%'
		</if>
		order by regdate desc
		)Tb
		)
		where rNum Between #{start} and #{end}
	</select>
	
	
	<select id = "getTodaySignupCount" resultType="int">
		select count(*) as today_signup_count
		from userinfo
		where trunc(regdate) = trunc(sysdate)
	</select>
	
	
	<select id="getUserTotalOrderPrice" resultType="int">
		SELECT nvl(SUM(order_price), 0) AS total_order_price
        FROM orderinfo
        LEFT OUTER JOIN order_cancel
        ON orderinfo.order_number = order_cancel.order_number
        WHERE order_cancel_date IS NULL and orderinfo.user_id = #{user_id}
	</select>
	<select id="getUserListCount" resultType="int">
		select count(*)
		from userinfo
		order by regdate desc
	</select>
	
	<select id="getUserSearchCount" resultType="int">
		select count(*)
		from userinfo
		where #{searchField} like  LIKE '%' || #{searchWord} || '%'
		order by regdate desc
	</select>
</mapper>