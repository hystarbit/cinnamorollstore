<html>
<head>
<meta charset="UTF-8">
<title>시나모롤 스토어</title>
<link href="${path}/resources/css/main.css" rel="stylesheet" />
<script>
	// 아이디, 비밀번호, 비밀번호확인, 이메일, 전화번호 정규식으로 확인하기 
	// 나머지 부분 빈칸인지 확인하기
	function validateForm(form){
		var userIdPattern = /^[a-zA-Z0-9]{5,15}$/;
		var passwordPattern = ^[A-Za-z\d@$!%*?&]{8,20}$;
		var namePattern = /^.{1,10}$/;
		var addressPattern = /^.{10,100}$/;
		var emailPattern = /^[\w-\.]+@([\w-]+\.)+[\w-]{2,}$/;
		var phonePattern = /^01[016789]-\d{3,4}-\d{4}$/;
		
		if(!userIdPattern.test(form.user_id.value)){
			alert("아이디는 5~15자의 영문자와 숫자로 입력해주세요.");
			form.user_id.focus();
			return false;
		}
		
		if(!passwordPattern.test(form.password.value)){
			alert("비밀번호는 8~20자, 대문자, 소문자, 숫자, 특수문자를 포함해야 합니다.");
			form.password.focus();
			return false;
		}
		
		if(form.password.value != form.password-check.value){
			alert("비밀번호가 일치하지 않습니다. 다시 입력해주세요.");
			form.password-check.focus();
			return false;
		}
		
		var nameLength = getByteLength(form.name.value)
		if(nameLength < 1 || nameLength > 30){
			alert("이름은 1~10자로 입력해야 합니다.");
			form.name.focus();
			return false;
		}
		
		if(!addressPattern.test(address)){
			alert("주소는 10~100자로 입력해야 합니다.");
			form.address.focus()
			return false;
		}
		
		if(!phonePattern.test(phone)){
			alert("올바른 휴대전화 형식을 입력해주세요.");
			form.phone.focus();
			return false;
		}
		
		if(!emailPattern.test(email)){
			alert("올바른 이메일 주소를 입력해주세요.");
			form.email.focus();
			return false;
		}
		return true;
	}
	
	function cancelJoin(){
		if(confirm("회원가입을 취소하시겠습니까?")){
			window.location.href="${path}/main.do";
		}else{
			return false;
		}
	}
</script>
</head>
<body>
	<div id="wrap">
		<%@ include file="../fixedBar/nav-before.jsp"%>
		<c:if test="${param.error == 'exists'}">
			<script>
				alert('기존에 같은 아이디를 가진 회원이 존재합니다.');
			</script>
		</c:if>
		<div id="join" class="login">
			<h2 id="join-title">시나모롤 스토어 회원가입</h2>
			<form action="${path}/join.do" method="post" id="joinForm"
				class="loginForm" onsubmit="return validateForm(form)">
				<input type="text" id="user_id" name="user_id"
				placeholder="아이디(5~15자의 영문 대소문자 및 숫자)"
				required> 
				<br> 
				<input type="password" class="password"
					id="password" name="password" 
					placeholder="비밀번호(8~20자, 대문자, 소문자, 숫자, 특수문자를 포함)"
					required>
				<br> 
				<input type="password" class="password"
					id="password-check" name="password-check" 
					placeholder="비밀번호 확인(비밀번호와 일치)"
					required> 
				<br>
				<input type="text" id="name" name="name" 
				placeholder="이름(1~10자 입력가능)"
				required>
				<br> 
				<input type="text" id="address" name="address"
					placeholder="주소(10~100자 입력가능)"
					required> 
				<br> 
				<input type="text" id="phone" name="phone" 
					placeholder="휴대전화(000-0000-0000꼴로 입력하세요.)"
					required> 
				<br>
				<input type="text" id="email" name="email" 
				placeholder="이메일(유효한 이메일주소 입력가능 )"
				required> 
				<br>
				<button type="submit" id="join-submit" class="login-submit">회원가입</button>
				<br>
				<button type="button" class="join-button" onclick="cancelJoin()">취소</button>
			</form>

		</div>
		<%@ include file="../fixedBar/footer.jsp"%>
	</div>
