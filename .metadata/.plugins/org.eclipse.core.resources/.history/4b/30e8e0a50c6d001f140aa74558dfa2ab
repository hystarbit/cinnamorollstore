<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderDAO">
	<insert id="insertOrder" parameterType="Order">
		insert into
		orderinfo(order_id, name, password, 
		email, phone, address)
		values(#{order_id}, #{name}, #{password}, 
		#{email}, #{phone}, #{address})
	</insert>

	<update id="updateOrder">
		update orderinfo
		set name = #{name},address = #{address}, 
		phone = #{phone},email = #{email}
		where order_id = #{order_id}
	</update>
	
	<update id="updateOrderPassword">
		update orderinfo
		set password = #{password}
		where order_id = #{order_id}
	</update>

	<delete id="deleteOrder">
		delete orderinfo
		where order_id = #{order_id}
	</delete>
	
	
	<select id="getOrder" resultType="Order">
		select *
		from orderinfo
		where order_id = #{order_id} and password = #{password}
	</select>
	
	<select id="getOrderDetail" resultType="Order">
		select *
		from orderinfo
		where order_id = #{order_id}
	</select>
	
	<select id="getOrderAdminLogin" resultType="Order">
		select *
		from orderinfo
		where order_id = #{order_id} and password = #{password}
		and grade = '관리자'
	</select>
	
	<select id="getOrderAdmin" resultType="Order">
		select *
		from orderinfo
		where order_id = #{order_id} and grade = '관리자'
	</select>
	<select id="getOrderList" resultType="Order">
		select *
		from orderinfo
		order by regdate desc
	</select>
	<select id = "getTodaySignupCount" resultType="int">
		select count(*) as today_signup_count
		from orderinfo
		where trunc(regdate) = trunc(sysdate)
	</select>
	
	<update id="updateOrderByAdmin">
		update orderinfo
		set address = #{address}, phone = #{phone},
		email = #{email}, grade = #{grade}
		where order_id = #{order_id}
	</update>
</mapper>