<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderItemsItemsDAO">
	<insert id="insertOrderItems" parameterType="OrderItemsItems">
		insert into
		order_items(order_number, order_type, order_price, 
		payment_status, order_status, user_id)
		values(#{order_number}, #{order_type}, #{order_price}, 
		#{payment_status}, #{order_status}, #{user_id})
	</insert>

	<update id="updatePaymentStatus">
		update order_items
		set payment_status = #{payment_status}, 
		where order_number = #{order_number}
	</update>
	
	<update id="updateOrderItemsStatus">
		update order_items
		set order_status = #{order_status}
		where order_number = #{order_number}
	</update>

	<delete id="deleteOrderItems">
		delete order_items
		where order_number = #{order_number}
	</delete>
	
	<select id="getOrderItems" resultType="OrderItems">
		select *
		from order_items
		where order_number = #{order_number}
	</select>
	
	<select id="getOrderItemsList" resultType="OrderItems">
		select *
		from order_items
		order by order_date desc
	</select>
	
	<select id = "getTodayOrderItemsCount" resultType="int">
		select count(*) as today_order_count
		from order_items
		where trunc(order_date) = trunc(sysdate)
	</select>
</mapper>