package com.cinnamoroll.store.reply;

import java.util.List;

public interface ReplyService2 {
	// 댓글 추가
	public void insertReply(ReplyVO2 vo);
	// 댓글 수정
	public void updateReply(ReplyVO2 vo);
	// 댓글 삭제
	public void deleteReply(ReplyVO2 vo);
	// 댓글 세부 정보 보기
	public ReplyVO2 getReply(ReplyVO2 vo);
	// 최신 댓글 세부 정보 보기
	public ReplyVO2 getRecentReply(ReplyVO2 vo);
	// 게시글 내 댓글 목록 보기
	public List<ReplyVO2> getReplyList(ReplyVO2 vo);
	// 게시글 내 댓글 목록 보기(페이징)
	public List<ReplyVO2> getReplyListPage(ReplyVO2 vo);
	// 게시글 내 댓글 총 개수
	public int getReplyCount(ReplyVO2 vo);
}
