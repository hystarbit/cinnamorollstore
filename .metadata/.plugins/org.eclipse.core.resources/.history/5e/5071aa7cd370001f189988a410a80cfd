package com.cinnamoroll.store.order.returns.impl;

import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;

import com.cinnamoroll.store.order.returns.OrderReturnVO;

public class OrderReturnDAO {
	@Autowired
	private SqlSessionTemplate mybatis;

	// 주문 취소 추가
	public void insertOrderCancel(OrderReturnVO vo) {
		mybatis.insert("OrderCancelDAO.insertOrderCancel", vo);
	}
	
	// 주문 취소 상태 수정
	public void updateOrderCancelStatus(OrderReturnVO vo) {
		mybatis.insert("OrderCancelDAO.updateOrderCancelStatus", vo);
	}

	// 주문 취소 삭제
	public void deleteOrderCancel(OrderReturnVO vo) {
		mybatis.delete("OrderCancelDAO.deleteOrderCancel", vo);
	}

	// 주문 취소 항목 보기
	public OrderReturnVO getOrderCancel(OrderReturnVO vo) {
		return (OrderReturnVO) mybatis.selectOne("OrderCancelDAO.getOrderCancel", vo);
	}

	// 특정 주문 취소 처리 상태의 주문 취소 목록 보기
	public List<OrderReturnVO> getOrderCancelStatusList(OrderReturnVO vo) {
		return mybatis.selectList("OrderCancelDAO.getOrderCancelStatusList", vo);
	}

	// 특정 회원의 주문 취소 목록 보기
	public List<OrderReturnVO> getMyOrderCancelList(OrderReturnVO vo) {
		return mybatis.selectList("OrderCancelDAO.getMyOrderCancelList", vo);
	}

	// 오늘의 주문 취소 수 알기
	public int getTodayOrderCancelCount() {
		return mybatis.selectOne("OrderCancelDAO.getTodayOrderCancelCount");
	}
}
