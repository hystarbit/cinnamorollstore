<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CartDAO">
	<insert id="insertCart" parameterType="Cart">
		insert into
		cartinfo(cart_number, user_id, item_number, 
		item_price, quantity, delivery_price)
		values(#{cart_number}, #{user_id}, #{item_number}, 
		#{item_price}, #{phone}, #{address})
	</insert>

	<update id="updateCart">
		update cartinfo
		set quantity = #{quantity}
		where cart_number = #{cart_number}
	</update>

	<delete id="deleteCart">
		delete cartinfo
		where cart_number = #{cart_number}
	</delete>
	
	<select id="getCart" resultType="Cart">
		select *
		from cartinfo
		where cart_number = #{cart_number}
	</select>
	
	<select id="getMyCartList" resultType="Cart">
		select *
		from cartinfo
		where 
		order by cart_number desc
	</select>
</mapper>