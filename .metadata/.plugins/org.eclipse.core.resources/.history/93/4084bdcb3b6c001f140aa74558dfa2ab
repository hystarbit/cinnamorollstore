<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CartDAO">
	<insert id="insertCart" parameterType="Cart">
		insert into
		cartinfo(cart_id, name, password, 
		email, phone, address)
		values(#{cart_id}, #{name}, #{password}, 
		#{email}, #{phone}, #{address})
	</insert>

	<update id="updateCart">
		update cartinfo
		set name = #{name},address = #{address}, 
		phone = #{phone},email = #{email}
		where cart_id = #{cart_id}
	</update>

	<delete id="deleteCart">
		delete cartinfo
		where cart_id = #{cart_id}
	</delete>
	
	<select id="getCart" resultType="Cart">
		select *
		from cartinfo
		where cart_id = #{cart_id} and password = #{password}
	</select>
	
	<select id="getCartDetail" resultType="Cart">
		select *
		from cartinfo
		where cart_id = #{cart_id}
	</select>
	
	<select id="getCartList" resultType="Cart">
		select *
		from cartinfo
		order by regdate desc
	</select>
	<select id = "getTodaySignupCount" resultType="int">
		select count(*) as today_signup_count
		from cartinfo
		where trunc(regdate) = trunc(sysdate)
	</select>
	
	<update id="updateCartByAdmin">
		update cartinfo
		set address = #{address}, phone = #{phone},
		email = #{email}, grade = #{grade}
		where cart_id = #{cart_id}
	</update>
</mapper>