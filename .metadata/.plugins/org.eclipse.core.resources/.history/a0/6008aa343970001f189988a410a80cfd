<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderDeliveryDAO">
	<insert id="insertOrderDelivery" parameterType="OrderDelivery">
		insert into
		order_delivery(delivery_number,order_number)
		values((select
		nvl(max(order_number), 0) + 1 from order_delivery), #{order_number})
	</insert>
	<update id="updateOrderDeliveryStatus">
		update order_delivery
		set order_delivery_status = #{order_delivery_status}
		where order_number = #{order_number}
	</update>
	<delete id="deleteOrderDelivery">
		delete order_delivery
		where order_number = #{order_number}
	</delete>

	<select id="getOrderDelivery" resultType="OrderDelivery">
		select order_delivery.order_number as order_number, 
		order_type, order_date, order_delivery_date, order_price,
		payment_status, order_status, order_delivery.user_id, 
		userinfo.name as user_name, phone, payment_type, order_address
		from order_delivery
		inner join userinfo
		on order_delivery.user_id=userinfo.user_id
		inner join order_delivery
		on order_delivery.order_number=order_delivery.order_number
		where order_number = #{order_number}
	</select>
	
	<select id="getMyOrderDeliveryList" resultType="OrderDelivery">
		select *
		from order_delivery
		where user_id = #{user_id}
		order by order_number desc
	</select>
	
	<select id="getOrderDeliveryStatusList" resultType="OrderDelivery">
		select orderinfo.order_number as order_number, 
		order_type, order_date, order_delivery_date, order_price,
		payment_status, order_status, orderinfo.user_id, 
		userinfo.name as user_name, payment_type, order_address
		from orderinfo
		inner join userinfo
		on orderinfo.user_id=userinfo.user_id
        inner join order_delivery
        on orderinfo.order_number = order_delivery.order_number
        where order_delivery_status = #{order_delivery_status}
		order by order_number desc
	</select>

	<select id="getTodayOrderDeliveryCount" resultType="int">
		select count(*) as
		today_order_delivery_count
		from order_delivery
		where trunc(order_delivery_date) = trunc(sysdate)
	</select>
</mapper>