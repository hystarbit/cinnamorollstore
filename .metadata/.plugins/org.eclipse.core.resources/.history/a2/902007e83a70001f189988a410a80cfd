<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderDeliveryDAO">
	<insert id="insertOrderDelivery" parameterType="OrderDelivery">
		insert into
		deliveryinfo(delivery_number,order_number,delivery_company)
		values((select nvl(max(delivery_number), 0) + 1 from deliveryinfo), 
		#{order_number}, #{delivery_company})
	</insert>
	<update id="updateOrderDeliveryStatus">
		update deliveryinfo
		set delivery_company = #{delivery_company}
		where delivery_number = #{delivery_number}
	</update>
	<delete id="deleteOrderDelivery">
		delete deliveryinfo
		where delivery_number = #{delivery_number}
	</delete>

	<select id="getOrderDelivery" resultType="OrderDelivery">
		select deliveryinfo.order_number as order_number, 
		order_type, order_date, deliveryinfo_date, order_price,
		payment_status, order_status, deliveryinfo.user_id, 
		userinfo.name as user_name, phone, payment_type, order_address
		from deliveryinfo
		inner join userinfo
		on deliveryinfo.user_id=userinfo.user_id
		inner join deliveryinfo
		on deliveryinfo.order_number=deliveryinfo.order_number
		where order_number = #{order_number}
	</select>
	
	<select id="getMyOrderDeliveryList" resultType="OrderDelivery">
		select *
		from deliveryinfo
		where user_id = #{user_id}
		order by order_number desc
	</select>
	
	<select id="getOrderDeliveryStatusList" resultType="OrderDelivery">
		select orderinfo.order_number as order_number, 
		order_type, order_date, deliveryinfo_date, order_price,
		payment_status, order_status, orderinfo.user_id, 
		userinfo.name as user_name, payment_type, order_address
		from orderinfo
		inner join userinfo
		on orderinfo.user_id=userinfo.user_id
        inner join deliveryinfo
        on orderinfo.order_number = deliveryinfo.order_number
        where deliveryinfo_status = #{deliveryinfo_status}
		order by order_number desc
	</select>

	<select id="getTodayOrderDeliveryCount" resultType="int">
		select count(*) as today_deliveryinfo_count
		from deliveryinfo
		where trunc(deliveryinfo_date) = trunc(sysdate)
	</select>
</mapper>