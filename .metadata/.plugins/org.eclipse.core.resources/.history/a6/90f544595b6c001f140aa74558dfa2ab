<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CartDAO">
	<insert id="insertCart" parameterType="Cart">
		insert into
		cartinfo(cart_number, user_id, item_number, quantity)
		values((select nvl(max(cart_number), 0) + 1 from cartinfo), 
		#{user_id}, #{item_number}, #{quantity})
	</insert>

	<update id="updateCart">
		update cartinfo
		set quantity = #{quantity}
		where cart_number = #{cart_number}
	</update>

	<delete id="deleteCart">
		delete cartinfo
		where cart_number = #{cart_number}
	</delete>
	
	<select id="getCart" resultType="Cart">
		select *
		from cartinfo
		where cart_number = #{cart_number}
	</select>
	
	<select id="getExistingCartItems" resultType="int">
		select count(*)
		from cartinfo
		where user_id = #{user_id} and item_number = #{item_number}
	</select>
	
	<select id="getCartList" resultType="Cart">
		select cart_number, user_id, cartinfo.item_number as item_number, 
		image, name, sale_price, quantity, delivery_price
		from cartinfo
		inner join iteminfo on cartinfo.item_number = iteminfo.item_number
		where user_id = #{user_id}
		order by cart_number asc
	</select>
</mapper>