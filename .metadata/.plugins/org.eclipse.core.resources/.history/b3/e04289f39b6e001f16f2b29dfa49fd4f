package com.cinnamoroll.store.order.cancel.impl;

import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.cinnamoroll.store.order.cancel.OrderCancelVO;

@Repository
public class OrderCancelDAO {

	@Autowired
	private SqlSessionTemplate mybatis;

	// 주문 추가
	public void insertOrderCancel(OrderCancelVO vo) {
		mybatis.insert("OrderDAO.insertOrder", vo);
	}

	// 배송 주소 수정
	public void updateOrderAddress(OrderCancelVO vo) {
		mybatis.update("OrderDAO.updateOrderAddress", vo);
	}

	// 결제 상태 수정
	public void updatePaymentStatus(OrderCancelVO vo) {
		mybatis.update("OrderDAO.updatePaymentStatus", vo);
	}

	// 주문 상태 수정
	public void updateOrderStatus(OrderCancelVO vo) {
		mybatis.update("OrderDAO.updateOrderStatus", vo);
	}

	// 주문 삭제
	public void deleteOrder(OrderCancelVO vo) {
		mybatis.delete("OrderDAO.deleteOrder", vo);
	}

	// 주문 보기
	public OrderCancelVO getOrder(OrderCancelVO vo) {
		return (OrderCancelVO) mybatis.selectOne("OrderDAO.getOrder", vo);
	}

	// 주문 목록 보기
	public List<OrderCancelVO> getOrderList(OrderCancelVO vo) {
		return mybatis.selectList("OrderDAO.getOrderList", vo);
	}

	// 특정 회원의 주문 목록 보기
	public List<OrderCancelVO> getMyOrderList(OrderCancelVO vo) {
		return mybatis.selectList("OrderDAO.getMyOrderList", vo);
	}

	// 주문 상태별 주문 목록 보기
	public List<OrderCancelVO> getOrderStatusList(OrderCancelVO vo) {
		return mybatis.selectList("OrderDAO.getOrderStatusList", vo);
	}

	// 오늘의 주문 수 알기
	public int getTodayOrderCount() {
		return mybatis.selectOne("OrderDAO.getTodayOrderCount");
	}

	// 최대 주문 번호 알기
	public int getMaxOrderNumber() {
		return mybatis.selectOne("OrderDAO.getMaxOrderNumber");
	}

}
