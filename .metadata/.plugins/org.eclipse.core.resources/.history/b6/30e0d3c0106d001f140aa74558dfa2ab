<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderItemsDAO">
	<insert id="insertOrderItems" parameterType="OrderItems">
		insert into
		order_items(order_item_number, order_number, item_number, 
		item_price, quantity, delivery_price)
		values((select nvl(max(order_item_number), 0) + 1 from order_items), #{order_type}, 
		#{order_price}, #{payment_status}, #{order_status}, #{user_id})
	</insert>

	<update id="updatePaymentStatus">
		update order_items
		set payment_status = #{payment_status}, 
		where order_item_number = #{order_item_number}
	</update>
	
	<update id="updateOrderItemsStatus">
		update order_items
		set order_status = #{order_status}
		where order_item_number = #{order_item_number}
	</update>

	<delete id="deleteOrderItems">
		delete order_items
		where order_item_number = #{order_item_number}
	</delete>
	
	<select id="getOrderItems" resultType="OrderItems">
		select *
		from order_items
		where order_item_number = #{order_item_number}
	</select>
	
	<select id="getOrderItemsList" resultType="OrderItems">
		select *
		from order_items
		order by order_date desc
	</select>
	
	<select id = "getTodayOrderItemsCount" resultType="int">
		select count(*) as today_order_count
		from order_items
		where trunc(order_date) = trunc(sysdate)
	</select>
</mapper>