<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderCancelDAO">
	<insert id="insertOrderCancel" parameterType="OrderCancel">
		insert into
		order_cancel(order_number)
		values(#{order_number})
	</insert>
	<update id="updateOrderCancelStatus">
		update order_cancel
		set order_cancel_status = #{order_cancel_status}
		where order_number = #{order_number}
	</update>
	<delete id="deleteOrderCancel">
		delete order_cancel
		where order_number = #{order_number}
	</delete>

	<select id="getOrderCancel" resultType="OrderCancel">
		select order_cancel.order_number as order_number, 
		order_type, order_date, order_cancel_date, order_price,
		payment_status, order_status, order_cancel.user_id, 
		userinfo.name as user_name, phone, payment_type, order_address
		from order_cancel
		inner join userinfo
		on order_cancel.user_id=userinfo.user_id
		inner join order_cancel
		on order_cancel.order_number=order_cancel.order_number
		where order_number = #{order_number}
	</select>
	
	<select id="getMyOrderCancelList" resultType="OrderCancel">
		select *
		from order_cancel
		where user_id = #{user_id}
		order by order_number desc
	</select>
	
	<select id="getOrderCancelStatusList" resultType="OrderCancel">
		select orderinfo.order_number as order_number, 
		order_type, order_date, order_cancel_date, order_price,
		payment_status, order_status, orderinfo.user_id, 
		userinfo.name as user_name, payment_type, order_address
		from orderinfo
		inner join userinfo
		on orderinfo.user_id=userinfo.user_id
        inner join order_cancel
        on orderinfo.order_number = order_cancel.order_number
        where order_cancel_status = #{order_cancel_status}
		order by order_number desc
	</select>
	
	<select id="getOrderCancelStatusListPage" resultType="OrderCancel">
		select orderinfo.order_number as order_number, 
		order_type, order_date, order_cancel_date, order_price,
		payment_status, order_status, orderinfo.user_id, 
		userinfo.name as user_name, payment_type, order_address
		from orderinfo
		inner join userinfo
		on orderinfo.user_id=userinfo.user_id
        inner join order_cancel
        on orderinfo.order_number = order_cancel.order_number
        where order_cancel_status = #{order_cancel_status}
		order by order_number desc
	</select>

	<select id="getTodayOrderCancelCount" resultType="int">
		select count(*) as
		today_order_cancel_count
		from order_cancel
		where trunc(order_cancel_date) = trunc(sysdate)
	</select>
	
	<select id="getOrderCancelStatusCount" resultType="int">
		select count(*)
        from(        
        select orderinfo.order_number as order_number, 
        order_cancel_date
		from orderinfo
        inner join order_cancel
        on orderinfo.order_number = order_cancel.order_number
        where order_cancel_status = #{order_cancel_status}
		order by order_number desc
        )
	</select>
</mapper>