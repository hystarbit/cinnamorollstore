<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ItemDAO">
	<insert id="insertItem" parameterType="Item">
		insert into
		iteminfo(item_number,category,name,sale_price,
		original_price,delivery_price,image,exposure,seller_id)
		values((select nvl(max(item_number), 10000000) + 1 from iteminfo), 
		#{category},#{name},#{sale_price},#{original_price},
		#{delivery_price},#{image},#{exposure},#{seller_id})
	</insert>

	<update id="updateItem">
		update iteminfo
		set category = #{category}, name = #{name},
		sale_price = #{sale_price}, original_price = #{original_price},
		delivery_price = #{delivery_price},
		image = #{image}, exposure = #{exposure}
		where item_number = #{item_number}
	</update>

	<delete id="deleteItem">
		delete iteminfo
		where item_number = #{item_number}
	</delete>

	<select id="getItem" resultType="Item">
		select *
		from iteminfo
		where item_number = #{item_number}
	</select>
	<select id="getItemList" resultType="Item">
		select *
		from iteminfo
		order by item_number desc
	</select>
	<select id="getItemDisplayList" resultType="Item">
		select *
		from iteminfo
		where exposure = '진열'
		order by item_number desc
	</select>
	<select id="getItemCategoryList" resultType="Item">
		select *
		from iteminfo
		where category = #{category} and exposure = '진열'
		order by item_number desc
	</select>
	<select id="getItemSearchCategoryList" resultType="Item">
		select *
		from iteminfo
		where name like '%' || #{searchItem} || '%'
		and category = #{category} and exposure = '진열'
		order by item_number desc
	</select>
	
	<select id="getItemDisplayListPage" resultType="Item">
		select *
		from(
    		select rownum rNum,Tb.*
    		from(
        		select *
        		from iteminfo
        		where exposure = '진열'
        		order by item_number desc
    		)Tb
		)
		where rNum Between #{start} and #{end}
	</select>
	
	<select id="getItemDisplayCategoryListPage" resultType="Item">
		select *
		from(
    		select rownum rNum,Tb.*
    		from(
        		select *
        		from iteminfo
        		where category = #{category} and exposure = '진열'
        		order by item_number desc
    		)Tb
		)
		where rNum Between #{start} and #{end}
	</select>
	
	
	<select id = "getTodayItemCount" resultType="int">
		select count(*) as today_item_count
		from iteminfo
		where trunc(regdate) = trunc(sysdate)
	</select>
	<select id="getItemDisplayCount" resultType="int">
		select count(*)
		from iteminfo
		where exposure = '진열'
	</select>
	
</mapper>