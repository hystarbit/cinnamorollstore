<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardDAO">
	<insert id="insertBoard" parameterType="Board">
		insert into
		iteminfo(item_number,category,name,sale_price,
		original_price,delivery_price,image,exposure,seller_id)
		values((select nvl(max(item_number), 10000000) + 1 from iteminfo), 
		#{category},#{name},#{sale_price},#{original_price},
		#{delivery_price},#{image},#{exposure},#{seller_id})
	</insert>

	<update id="updateBoard">
		update iteminfo
		set category = #{category}, name = #{name},
		sale_price = #{sale_price}, original_price = #{original_price},
		delivery_price = #{delivery_price},
		image = #{image}, exposure = #{exposure}
		where item_number = #{item_number}
	</update>

	<delete id="deleteBoard">
		delete iteminfo
		where item_number = #{item_number}
	</delete>

	<select id="getBoard" resultType="Board">
		select *
		from iteminfo
		where item_number = #{item_number}
	</select>
	<select id="getBoardList" resultType="Board">
		select *
		from iteminfo
		order by item_number desc
	</select>
	
	<select id="getBoardListPage" resultType="Board">
		select *
		from(
    		select rownum rNum,Tb.*
    		from(
				select *
				from iteminfo
				order by item_number desc
		    )Tb
		)
		where rNum Between #{start} and #{end}
	</select>
	
	<select id="getBoardSearchListPage" resultType="Board">
		select *
		from(
    	select rownum rNum,Tb.*
    	from(
		select *
		from iteminfo
		<if test="searchField != null and searchField == 'name'">
		where name like '%' || #{searchWord} || '%'
		</if>
		<if test="searchField != null and searchField == 'item_number'">
		where item_number like '%' || #{searchWord} || '%'
		</if>
		order by item_number desc
		)Tb
		)
		where rNum Between #{start} and #{end}
	</select>
	
	<select id="getBoardDisplayList" resultType="Board">
		select *
		from iteminfo
		where exposure = '진열'
		order by item_number desc
	</select>
	<select id="getBoardCategoryList" resultType="Board">
		select *
		from iteminfo
		where category = #{category} and exposure = '진열'
		order by item_number desc
	</select>

	<select id="getBoardSearchCategoryList" resultType="Board">
		select *
		from iteminfo
		where name like '%' || #{searchBoard} || '%'
		and category = #{category} and exposure = '진열'
		order by item_number desc
	</select>
	
	<select id="getBoardSearchCategoryListPage" resultType="Board">
		select *
		from(
    	select rownum rNum,Tb.*
    	from(
		select *
		from iteminfo
		where name like '%' || #{searchBoard} || '%'
		and category = #{category} and exposure in ('진열', '품절')
		order by item_number desc
		)Tb
		)
		where rNum Between #{start} and #{end}
	</select>
	
	<select id="getBoardDisplayListPage" resultType="Board">
		select *
		from(
    		select rownum rNum,Tb.*
    		from(
        		select *
        		from iteminfo
        		where exposure in ('진열', '품절')
        		order by item_number desc
    		)Tb
		)
		where rNum Between #{start} and #{end}
	</select>
	
	<select id="getBoardDisplayCategoryListPage" resultType="Board">
		select *
		from(
    		select rownum rNum,Tb.*
    		from(
        		select *
        		from iteminfo
        		where category = #{category} and exposure in ('진열', '품절')
        		order by item_number desc
    		)Tb
		)
		where rNum Between #{start} and #{end}
	</select>
	
	
	<select id = "getTodayBoardCount" resultType="int">
		select count(*) as today_item_count
		from iteminfo
		where trunc(regdate) = trunc(sysdate)
	</select>
	
	<select id="getBoardCount" resultType="int">
		select count(*)
		from iteminfo
	</select>
	
	<select id="getBoardSearchCount" resultType="int">
		select count(*)
		from iteminfo
		<if test="searchField != null and searchField == 'name'">
		where name like '%' || #{searchWord} || '%'
		</if>
		<if test="searchField != null and searchField == 'item_number'">
		where item_number like '%' || #{searchWord} || '%'
		</if>
	</select>
	
	<select id="getBoardDisplayCount" resultType="int">
		select count(*)
		from iteminfo
		where exposure in ('진열', '품절')
	</select>
	
	<select id="getBoardDisplayCategoryCount" resultType="int">
		select count(*)
		from iteminfo
		where category = #{category} and exposure in ('진열', '품절')
	</select>
	
	<select id="getBoardSearchCategoryCount" resultType="int">
		select count(*)
		from iteminfo
		where name like '%' || #{searchBoard} || '%'
		and category = #{category} and exposure in ('진열', '품절')
	</select>
	
</mapper>