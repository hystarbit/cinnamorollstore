package com.cinnamoroll.store.order.items.impl;

import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;

import com.cinnamoroll.store.order.items.OrderItemsVO;

public class OrderItemsDAO {
	
	@Autowired
	private SqlSessionTemplate mybatis;

	// 주문 추가
	public void insertOrder(OrderItemsVO vo) {
		mybatis.insert("OrderItemsDAO.insertOrder", vo);
	}

	// 결제 상태 수정
	public void updatePaymentStatus(OrderItemsVO vo) {
		mybatis.update("OrderItemsDAO.updatePaymentStatus", vo);
	}

	// 주문 상태 수정
	public void updateOrderStatus(OrderItemsVO vo) {
		mybatis.update("OrderItemsDAO.updateOrderStatus", vo);
	}

	// 주문 삭제
	public void deleteOrder(OrderItemsVO vo) {
		mybatis.delete("OrderItemsDAO.deleteOrder", vo);
	}

	// 주문 보기
	public OrderItemsVO getOrder(OrderItemsVO vo) {
		return (OrderItemsVO) mybatis.selectOne("OrderItemsDAO.getOrder", vo);
	}

	// 주문 목록 보기
	public List<OrderItemsVO> getOrderList(OrderItemsVO vo) {
		return mybatis.selectList("OrderItemsDAO.getOrderList", vo);
	}

	// 오늘의 주문 수 알기
	public int getTodayOrderCount() {
		return mybatis.selectOne("OrderItemsDAO.getTodayOrderCount");
	}
}
