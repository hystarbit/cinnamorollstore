<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderDeliveryDAO">
	<insert id="insertOrderDelivery" parameterType="OrderDelivery">
		insert into
		deliveryinfo(delivery_number,order_number,delivery_company)
		values((select nvl(max(delivery_number), 40000000) + 1 from deliveryinfo), 
		#{order_number}, #{delivery_company})
	</insert>
	
	<select id = "getOrderNumberDeliveryCount" resultType="int">
		select count(*) 
		from deliveryinfo 
		where order_number = #{order_number}
	</select>
</mapper>