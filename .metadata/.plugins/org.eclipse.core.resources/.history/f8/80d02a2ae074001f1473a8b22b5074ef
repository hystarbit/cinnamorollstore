<script>
	// 주소, 휴대전화, 이메일 정규식으로 확인하기 
	function validateForm(form){
		var itemNamePattern = /^.{1,20}$/;
		var itemPricePattern = /^\d{1,6}$/;
		var deliveryPricePattern = /^\d{1,5}$/;
		
		if(!itemNamePattern.test(form.email.value)){
			alert("올바른 이메일 주소를 입력해주세요.");
			form.email.focus();
			return false;
		}
		
		if(!itemPricePattern.test(form.sale_price.value)){
			alert("올바른 휴대전화 형식을 입력해주세요.");
			form.phone.focus();
			return false;
		}
		
		if(!itemPricePattern.test(form.address.value)){
			alert("주소는 10~100자로 입력해야 합니다.");
			form.address.focus()
			return false;
		}
		return true;
	}
</script>
